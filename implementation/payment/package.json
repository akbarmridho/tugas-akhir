{
  "name": "payment",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"npm run dev:http\" \"npm run dev:notifier\" \"npm run dev:echo\"",
    "dev:http": "tsx watch src/http/index.ts",
    "debug:http": "DEBUG='ioredis:*' tsx watch src/http/index.ts",
    "dev:notifier": "tsx watch src/notifier/index.ts",
    "dev:echo": "tsx watch src/echo/index.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/prometheus": "^1.0.1",
    "@hono/zod-openapi": "^0.19.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@t3-oss/env-core": "^0.12.0",
    "bullmq": "^5.41.8",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "got": "^14.4.6",
    "hono": "^4.7.4",
    "ioredis": "^5.6.0",
    "node-fetch": "^3.3.2",
    "prom-client": "^15.1.3",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@jest/globals": "^29.7.0",
    "@types/ioredis-mock": "^8.2.5",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.17",
    "concurrently": "^9.1.2",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "tsx": "^4.7.1",
    "typescript": "^5.8.2"
  }
}