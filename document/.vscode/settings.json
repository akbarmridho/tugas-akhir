{
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.recipe.default": "lastUsed",
  "latex-workshop.latex.recipes": [
    {
      "name": "latex_itb_ta MAC",
      "tools": ["latex_itb_make"]
      // "tools": ["latex_itb_make", "latex_itb_move"]
    },
    {
      "name": "latex_itb_ta Paper",
      "tools": ["latex_itb_make_paper"]
    },
        {
      "name": "latex_itb_ta Poster",
      "tools": ["latex_itb_make_poster"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latex_itb_make",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-bibtex",
        "-outdir=../build",
        "-cd",
        "./thesis.tex"
      ],
      "env": {}
    },
    {
      "name": "latex_itb_make_paper",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-bibtex",
        "-outdir=../build",
        "-cd",
        "./paper.tex"
      ],
      "env": {}
    },
    {
      "name": "latex_itb_make_poster",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-bibtex",
        "-outdir=../build",
        "-cd",
        "./poster.tex"
      ],
      "env": {}
    },
    // {
    //   "name": "latex_itb_move",
    //   "command": "cp",
    //   "args": ["/Y", "%OUTDIR%/thesis.pdf", "%DIR%/../output/thesis.pdf"],
    //   "env": {}
    // }
  ],
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex-workshop.latex.outDir": "%DIR%/../build",
  "latex-workshop.latex.autoBuild.run": "onSave",
  "editor.formatOnSave": true,
  "cSpell.language": "en,id-ID",
  "cSpell.words": [
    "kluster",
    "penskalaan",
    "relasional",
    "skalabilitas",
    "terspesialisasi"
  ]
}
